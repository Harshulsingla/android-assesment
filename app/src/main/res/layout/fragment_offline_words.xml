<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Search Bar -->
    <AutoCompleteTextView
        android:id="@+id/inputOfflineSearch"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/search_bar_background"
        android:hint="Filter by Parts Of Speech"
        android:drawableStart="@drawable/filter_icon"
        android:drawablePadding="8dp"
        android:textColor="@android:color/black"
        android:textColorHint="#A9A9A9"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:inputType="text"
        android:drawableTint="#669900"
        android:imeOptions="actionSearch"
        android:textCursorDrawable="@drawable/custom_cursor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/noResultsMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Records Found"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/darker_gray"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/inputOfflineSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RecyclerView for Offline Words -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewOfflineWords"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/inputOfflineSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

