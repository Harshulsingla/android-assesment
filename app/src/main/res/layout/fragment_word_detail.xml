<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/wordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello"
        android:textColor="@android:color/black"
        android:textSize="38sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/phoneticPronunciation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/həˈləʊ/, /hɛˈloʊ/"
        android:textColor="@android:color/darker_gray"
        android:textSize="19sp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wordTitle" />

    <ImageView
        android:id="@+id/playIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:contentDescription="Play Pronunciation"
        android:src="@android:drawable/ic_media_play"
        app:layout_constraintStart_toEndOf="@id/phoneticPronunciation"
        app:layout_constraintBottom_toBottomOf="@id/phoneticPronunciation" />

    <LinearLayout
        android:id="@+id/partOfSpeechContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playIcon"
        app:layout_constraintEnd_toEndOf="parent">
    </LinearLayout>


    <TextView
        android:id="@+id/synonymsHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Synonyms"
        android:textColor="@android:color/black"
        android:textSize="21sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/partOfSpeechContainer" />

    <TextView
        android:id="@+id/synonymsList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="greeting, salutation, salute, welcome"
        android:textColor="@android:color/darker_gray"
        android:textSize="17sp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/synonymsHeading" />

    <TextView
        android:id="@+id/antonymsHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Antonyms"
        android:textColor="@android:color/black"
        android:textSize="21sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/synonymsList" />

    <TextView
        android:id="@+id/antonymsList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="farewell, goodbye"
        android:textColor="@android:color/darker_gray"
        android:textSize="17sp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/antonymsHeading" />
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
